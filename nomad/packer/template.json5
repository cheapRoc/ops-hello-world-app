{
    variables: {
        triton_account: "{{ env `SDC_ACCOUNT` }}",
        triton_key_id: "{{ env `SDC_KEY_ID` }}",
        triton_url: "{{ env `SDC_URL` }}",

        // Ubuntu 16.04 (not LX)
        source_image: "554abb2e-a957-4b51-a601-97c934eadf33",
    },
    builders: [
    {
        type: "triton",

        triton_url: "{{ user `triton_url` }}",
        triton_account: "{{ user `triton_account` }}",
        triton_key_id: "{{ user `triton_key_id` }}",

        source_machine_name: "nomad-builder",
        source_machine_package: "k4-highcpu-kvm-1.75G",
        source_machine_image: "{{ user `source_image` }}",

        ssh_username: "ubuntu",

        image_name: "hello-world-nomad",
        image_version: "1.0.0",
    }],
    provisioners: [
    {
        type: "file",
        source: "files/run-tomcat.sh",
        destination: "/tmp/run-tomcat.sh",
    },
    {
        type: "file",
        source: "files/tomcat",
        destination: "/tmp/tomcat",
    },
    {
        type: "file",
        source: "files/nomad.service",
        destination: "/tmp/nomad.service",
    },
    {
        type: "file",
        source: "files/config.hcl",
        destination: "/tmp/config.hcl",
    },
    {
        type: "shell",
        execute_command: "sudo -S sh -c '/usr/bin/env {{ .Vars }} {{ .Path }}'",
        scripts: [
            "scripts/update_host.sh",
            "scripts/install_nomad.sh",
            "scripts/install_app.sh",
        ],
    }]
}
